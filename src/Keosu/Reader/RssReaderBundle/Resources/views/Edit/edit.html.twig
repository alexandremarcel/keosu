{% extends 'KeosuCoreBundle:MainViews:content.html.twig' %}

{% block title %}
	Configure a new reader
{% endblock %}
{% block content %}
<div>
	<h1>Edit RSS Reader</h1>
   {{ form_start(form) }}
	    {{ form_errors(form) }}
	
	    {{ form_row(form.name) }}
	    {{ form_row(form.feed_url) }}
	    <br class="clear"/>
	    {{ form_row(form.striphtml) }}
	    <br class="clear"/>
	    <div class="allowupdate">
	    	{{ form_row(form.allowupdate) }}
	    	<div class="allowupdatelabel">
	    		Allow content be to synchronise again after the first import.
	    		<a class="badge remove-button" title="Allow content be to update after the first import. If you check this box you won't be able to modify content manually">
					<span class="glyphicon glyphicon-info-sign"></span>
				</a>
	    		 
	    	</div>
	    </div>
    	 <br class="clear"/>
		<input type="submit" class="btn btn-success" /><span>&nbsp;</span><a class="confirmModal" href="javascript:history.go(-1);" ><button type="button" class="btn btn-danger">Cancel</button></a>
	{{ form_end(form) }}
</div>
{% endblock %}

