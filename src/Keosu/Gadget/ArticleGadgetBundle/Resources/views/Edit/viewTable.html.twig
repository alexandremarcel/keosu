<table class="table table-striped table-hover clearfix" id="content-table" width="100%">
	<thead>
		<tr>
			<th>Title</th>
			<th>Content</th>
		</tr>
	</thead>
	<tbody>
	
	{% for article in articles %}
			<tr class="article">
				<td class="hidden articleid">{{ article.id }}</td>
				<td>{{ article.title }}</td>
				<td>{{ article.body |striptags | slice(0, 400)  }} (...)</td>
			</tr>	
    {% endfor %}	
	</tbody>
	<tfoot>
		<tr>
			<th>Title</th>
			<th>Content</th>
		</tr>
	</tfoot>
</table>
