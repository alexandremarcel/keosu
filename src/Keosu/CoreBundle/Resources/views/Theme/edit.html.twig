{% extends 'KeosuCoreBundle:MainViews:configuration.html.twig' %}


{% block content %}
{% if error != null %}
<div class="alert alert-danger">
	{{error}}
</div>
{% endif %}
<script type="text/javascript">
	$(document).ready(function() {
		
		function openInput($el){
			$el.parent().parent().find('input[type="file"]')[ 0 ].click();
		}
		 
		$(document).on("click",'.uploader',function() {
			 	openInput($(this));
			    return false;
		 });

		$(document).on("change",'input[type="file"]',function() {
			$nameFile = $( this ).val().split('\\');
			$('#name-file').html('	' + $nameFile[$nameFile.length - 1]);
		});
	});
	</script>
	<div class="picture-edit">
		{{ form_start(form) }}
		    {{ form_errors(form) }}
			    <div class="upload image-collection-entry col-lg-12">
			    	{{ form_row(form.file) }}
			    	<button type="button" class="btn btn-info uploader">Upload new Theme</button><span id="name-file"></span>	
			    </div>
		    <br class="clear"/>
 <br class="clear"/>
			    <br class="clear"/>
				<div class="col-md-3"></div>
	    		<input type="submit" class="btn btn-success" /><span>&nbsp;</span><a class="confirmModal" href="javascript:history.go(-1);" ><button type="button" class="btn btn-danger">Cancel</button></a>
						 {{ form_end(form) }}	    
	</div>
{% endblock %}

