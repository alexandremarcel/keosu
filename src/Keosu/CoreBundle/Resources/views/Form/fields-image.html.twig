{% extends 'MopaBootstrapBundle:Form:fields.html.twig' %}


{% block file_widget %}
    {% spaceless %}
    	{% if image_url is not null %}
    		<center>
	   		 	<img src="{{url_base}}{{ image_url }}" id="img-preview" class="uploader"/>
	   		 </center>
	   	{% else %}
	   		<center>
	   		 	<img src="{{url_base}}{{ image_url }}" id="img-preview" class="uploader" style="display:none"/>
	   		 </center>
	   	{% endif %}
	    {{ block('form_widget') }}
    {% endspaceless %}
{% endblock %}

