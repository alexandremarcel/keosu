{% extends 'KeosuCoreBundle:MainViews:configuration.html.twig' %}

{% block body %}
<div class="panel">
	<div class="row">
		<div class="col-md-12">
			<div class="wellcustom">
				<fieldset>
					<legend>Apps</legend>
					
					<a class="btn btn-success" href="{{ path('keosu_core_app_manage_add') }}">Add new app</a>
					<br class="clear"/><br class="clear"/>
					<table class="table table-striped table-hover">
						<thead>
							<tr>
								<th>App name</th>
								<th>App Theme</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							{% for app in apps %}
								<tr>
									<td>{{ app.name }}</td>
									<td>{{ app.theme }}</td>
									<td>
										<a href="{{ path('keosu_core_app_manage_edit',{'id':app.id}) }}"><i class="glyphicon glyphicon-edit"></i></a>
									</td>
								</tr>
							{% endfor %}
						</tbody>
						<tfoot>
							<tr>
								<th>App name</th>
								<th>App Theme</th>
								<th></th>
							</tr>
						</tfoot>
					</table>
				</fieldset>
			</div>
		</div>
	</div>
</div>
{% endblock %}
